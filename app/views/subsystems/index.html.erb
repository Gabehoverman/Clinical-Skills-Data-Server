<md-content ng-controller="SubsystemsController">
	<md-card>

        <md-toolbar class="md-table-toolbar md-accent" ng-hide="!selected.length">
          <div class="md-toolbar-tools">
            <span>{{toolbarTitle()}}</span>
            <div flex></div>
            <md-button class="md-icon-button" ng-click="delete()">
            	<md-icon class="material-icons">delete</md-icon>
            </md-button>
          </div>
        </md-toolbar>

        <md-toolbar class="md-table-toolbar md-default">
          <div class="md-toolbar-tools">
          	<md-icon class="material-icons">search</md-icon>
          	<form flex name="filter.form">
          		<input autofocus class="search-bar" type="text" ng-model="query.filter" placeholder="Search">
          	</form>
            <md-button class="md-icon-button" ng-click="toggleSearching()">
            	<md-icon class="material-icons">close</md-icon>
            </md-button>
          </div>
        </md-toolbar>

		<md-table-container>
			<table md-table ng-model="selected" md-row-select md-progress="subsystemsPromise">
				<thead md-head md-order="query.order">
					<tr md-row>
						<th md-column md-order-by="name"><span>Name</span></th>
						<th md-column md-order-by="details"><span>Details</span></th>
						<th md-column md-order-by="visible"><span>Visible</span></th>
					</tr>
				</thead>
				<tbody md-body>
					<tr md-row md-select="subsystem" md-select-id="{{subsystem.name}}" ng-repeat="subsystem in subsystems | filter: query.filter | orderBy: query.order | limitTo: query.limit : (query.page -1) * query.limit">
						<td md-cell>{{subsystem.name}}</td>
						<td md-cell>{{subsystem.details}}</td>
						<td md-cell>
							<md-checkbox ng-model="subsystem.visible" ng-disabled="true"></md-checkbox>
						</td>
					</tr>
				</tbody>
			</table>
		</md-table-container>
		<md-table-pagination md-page-select md-limit="query.limit" md-page="query.page" md-total="{{subsystems.length}}"></md-table-pagination>
	</md-card>
</md-content>