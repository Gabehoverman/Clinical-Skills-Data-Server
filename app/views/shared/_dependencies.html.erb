<%# AngularJS %>
<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular-animate.min.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular-aria.min.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular-messages.min.js"></script>

<%# Angular Material (ngMaterial, ngAnimate) %>
<script src="http://ajax.googleapis.com/ajax/libs/angular_material/1.0.0/angular-material.min.js"></script>
<link rel="stylesheet" href="http://ajax.googleapis.com/ajax/libs/angular_material/1.0.0/angular-material.min.css">

<%# Angular Material Data Table (md.data.table) %>
<script src="http://rawgit.com/daniel-nagy/md-data-table/master/dist/md-data-table.js"></script>
<link rel="stylesheet" href="http://rawgit.com/daniel-nagy/md-data-table/master/dist/md-data-table.css">

<%# Angular Material Icons %>
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

<!-- Initialize AngularJS App -->
<script>
  var app = angular.module('WVU-SoM-Data-Server', [
    'ngMaterial',
    'ngAnimate',
    'ngMessages',
    'md.data.table'
  ]).config(['$mdThemingProvider', function ($mdThemingProvider) {
    	$mdThemingProvider.theme('default').primaryPalette("blue");
	}]);
</script>

<!-- Initialize CRUD URLs for JavaScript -->
<script>
	
  var systems_base_url = "<%= url_for(controller: 'systems', action: 'index') %>";
  var systems_base_json_url = "<%= url_for(controller: 'systems', action: 'index', format: 'json') %>";

	var subsystems_base_url = "<%= url_for(controller: 'subsystems', action: 'index') %>";
  var systems_base_json_url = "<%= url_for(controller: 'systems', action: 'index', format: 'json') %>";

	var links_base_url = "<%= url_for(controller: 'links', action: 'index') %>";
  var links_base_json_url = "<%= url_for(controller: 'links', action: 'index', format: 'json') %>";

</script>